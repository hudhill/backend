enum Permission {
  IT
  ADMIN
  SCIENTIST
  MENTOR
  TEACHER
  STUDENT
  PARTICIPANT
}

type School {
  id: ID! @id
  title: String!
  description: String
  image: String
  largeImage: String
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Experiment {
  id: ID! @id
  title: String!
  description: String
  image: String
  largeImage: String
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  author: Profile!
}

type Profile {
  id: ID! @id
  username: String! @unique
  permissions: [Permission] @scalarList(strategy: RELATION)
  authEmail: [AuthEmail]!
}

type AuthEmail {
  id: ID! @id
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: String
  profile: Profile!
}
